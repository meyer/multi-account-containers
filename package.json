{
  "name": "testpilot-containers",
  "title": "Multi-Account Containers",
  "description": "Containers helps you keep all the parts of your online life contained in different tabs. Custom labels and color-coded tabs help keep different activities — like online shopping, travel planning, or checking work email — separate.",
  "version": "6.1.0",
  "author": "Andrea Marchesini, Luke Crouch and Jonathan Kingston",
  "bugs": {
    "url": "https://github.com/mozilla/multi-account-containers/issues"
  },
  "scripts": {
    "build": "npm test && cd src && web-ext build --overwrite-dest",
    "build-new": "rimraf lib && webpack -p --progress",
    "lint": "npm-run-all lint:*",
    "lint:addon": "addons-linter src --self-hosted",
    "lint:css": "stylelint src/css/*.css",
    "lint:html": "htmllint *.html",
    "lint:js": "eslint .",
    "package": "rm -rf src/web-ext-artifacts && npm run build && mv src/web-ext-artifacts/firefox_multi-account_containers-*.zip addon.xpi",
    "start": "web-ext run -s src/",
    "start-new": "web-ext run -s lib/",
    "test": "npm run lint && mocha ./test/setup.js test/**/*.test.js",
    "test-watch": "mocha ./test/setup.js test/**/*.test.js --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/firefox-webext-browser": "^67.0.1",
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/webpack": "^4.4.31",
    "@types/webpack-env": "^1.13.9",
    "addons-linter": "^1.3.2",
    "ajv": "^6.6.2",
    "chai": "^4.1.2",
    "copy-webpack-plugin": "^5.0.3",
    "eslint": "^3.17.1",
    "eslint-plugin-no-unsanitized": "^2.0.0",
    "eslint-plugin-promise": "^3.4.0",
    "htmllint-cli": "0.0.7",
    "jsdom": "^11.6.2",
    "json": "^9.0.6",
    "mini-css-extract-plugin": "^0.6.0",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.0.0",
    "rimraf": "^2.6.3",
    "sinon": "^4.4.0",
    "sinon-chai": "^2.14.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.3.0",
    "ts-loader": "^6.0.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5",
    "web-ext": "^2.2.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2"
  },
  "homepage": "https://github.com/mozilla/multi-account-containers#readme",
  "license": "MPL-2.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/multi-account-containers.git"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "singleQuote": true
  }
}
